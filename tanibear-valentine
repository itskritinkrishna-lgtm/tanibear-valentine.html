  <script>
    const runaway = document.getElementById("runaway");
    const music = document.getElementById("bgMusic");
    const namesBox = document.getElementById("names");
    const forever = document.getElementById("forever");

    document.body.addEventListener("click", () => {
      music.play().catch(() => {});
    }, { once: true });

    runaway.addEventListener("mouseenter", () => {
      const x = Math.random() * 200 - 100;
      const y = Math.random() * 120 - 60;
      runaway.style.transform = `translate(${x}px, ${y}px)`;
    });

    function sayYes() {
      document.getElementById("message").style.display = "block";
      createHearts();
      createNames();

      setTimeout(() => {
        forever.style.display = "flex";
      }, 3500);
    }

    function createHearts() {
      for (let i = 0; i < 30; i++) {
        const heart = document.createElement("div");
        heart.className = "heart";
        heart.innerHTML = "ğŸ’—";
        heart.style.left = Math.random() * 100 + "vw";
        heart.style.animationDelay = Math.random() * 2 + "s";
        document.getElementById("hearts").appendChild(heart);
        setTimeout(() => heart.remove(), 4000);
      }
    }

    function createNames() {
      namesBox.style.display = "block";
      const pairs = ["Tani Bear ğŸ»", "Ã—", "Kritin ğŸ’–"];

      for (let i = 0; i < 12; i++) {
        const name = document.createElement("div");
        name.className = "name";
        name.innerHTML = pairs.join(" ");
        name.style.left = Math.random() * 80 + "vw";
        name.style.animationDelay = Math.random() * 3 + "s";
        namesBox.appendChild(name);
        setTimeout(() => name.remove(), 6000);
      }
    }
  </script>

